//多组输入，一个整数（2~20），表示输出的行数，也表示组成反斜线的“*”的数量。

#include <stdio.h>

int main()
{
    int a = 0;
    while (~scanf("%d", &a))
    {
        int b = 0;
        for (b = 0;b < a;b++)
        {
            int c = 0;
            for (c = 0;c <b;c++)
            {
                printf(" ");
            }
            printf("*\n");
        }
    }
    return 0;
}
